enable-ipc=true

[module/date]
type=internal/date
interval=1.0
date = %Y-%m-%d
time =  %H:%M:%S
time-alt =  %Y-%m-%d
label = %time%
format =  <label>
format-alt = <label>

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
format=<label-state>
label-active-foreground=#0460ab

[module/pulseaudio]
type=internal/pulseaudio
sink=alsa_output.pci-0000_0a_00.3.analog-stereo
use-ui-max = true
interval =5
format-volume =<ramp-volume> <label-volume>
label-muted = 婢 muted
label-muted-foreground = #666
ramp-volume-1 = 奔
ramp-volume-2 = 墳
ramp-volume-0 = 奄
click-right = pavucontrol

[module/network]
type=internal/network
interface=enp4s0
interval=1.0
format-connected=<label-connected>
format-disconnected=<label-disconnected>
label-connected=
label-disconnected=Ø

[module/spotify]
type = custom/script
interval = 1 
format-prefix = " "
format = <label>
exec = sh /home/dan/.config/polybar/stat.sh
format-underline = #1db954
;control players (optional)
click-left =sh /home/dan/.config/polybar/pp.sh
click-right = sh /home/dan/.config/polybar/next.sh
click-middle = killall spotifyd

[module/battery]
